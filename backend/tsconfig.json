{
    "compilerOptions": {
      "target": "ES2020",           // Compiles to ECMAScript 2020
      "module": "commonjs",         // Use CommonJS module system (for Node.js)
      "esModuleInterop": true,      // Enable default imports for CommonJS modules
      "skipLibCheck": true,         // Skip type checking of declaration files (faster compilation)
      "strict": false,              // Disable strict type-checking options
      "outDir": "./dist",           // Output directory for compiled JavaScript files
      "rootDir": "./src",           // Root directory of your TypeScript source files
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "typeRoots": ["node_modules/@types"], // Ensure TypeScript looks in the right places for types
      "types": ["node"] // Ensures Node.js types are available
    },
    "include": ["src/**/*.ts"],  // Include all TypeScript files in the 'src' folder
    "exclude": ["node_modules"]  // Exclude the 'node_modules' folder
  }
  